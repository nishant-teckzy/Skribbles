<div class="container">
    <div class="row chat-container">
        <div class="border col-12 bg-secondary p-3">
            <h5><span style="font-size:30px; vertical-align: middle;" class="text-primary material-symbols-outlined">chat</span>Chat</h5>
        </div>
        <div class="col-12 chat-body bg-light p-3">
            <div class="text-right mb-2">
                <h6 class="text-muted"><small>Admin</small></h6>
                <div class="p-1 text-secondary">
                    Hello!
                </div>
            </div>
            <div class="text-left mb-2">
                <h6 class="text-muted"><small>Nishant</small></h6>
                <div class="p-1">
                    Hi there!
                </div>
            </div>
        </div>
        <div class="col-12">
            <form id="chat-form">
                <div class="input-group">
                    <input type="text" class="form-control" name="msg-input" placeholder="Type a message" id="message-input">
                    <div class="input-group-append">
                        <button id="msg_send" class="btn btn-primary" type="submit">Send</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>