            <label class=" color_label" for="red"><span class=" red"></span></label>
            
            <input type="radio" name="color" id="green" />
            <label class=" color_label" for="green"><span class=" green"></span></label>
            
            <input type="radio" name="color" id="yellow" />
            <label class=" color_label" for="yellow"><span class=" yellow"></span></label>
            
            <input type="radio" name="color" id="olive" />
