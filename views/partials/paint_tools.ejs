<div class="container">
    
        <div class="row">
            <div class="col-12 text-center">
                <div class="options btn-group" role="group">
                    <button id="rectangle" type="button" style="border-color:transparent;" class="option tool btn btn-sm btn-outline-primary"><i class='material-symbols-outlined' style='font-size:30px;'>rectangle</i></button>
                    <button id="circle" type="button" style="border-color:transparent;" class="option tool btn btn-sm btn-outline-primary"><i class='material-symbols-outlined' style='font-size:30px;'>circle</i></button>
                    <button id="triangle" type="button" style="border-color:transparent;" class="option tool btn btn-sm btn-outline-primary"><i class='material-symbols-outlined' style='font-size:30px;'>change_history</i></button>
                  </div>

            </div>
            <div class="col-12 text-center">
                <div class="option">
                    
                        <input type="checkbox" id="fill-color" class="form-check-input" value="">
