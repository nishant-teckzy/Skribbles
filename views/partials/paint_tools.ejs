            <input type="radio" name="color" id="orange" />
            <label class=" color_label" for="orange"><span class=" orange"></span></label>
            
            <input type="radio" name="color" id="teal" />
            <label class=" color_label" for="teal"><span class=" teal"></span></label>
            
            <input type="radio" name="color" id="blue" />
            <label class=" color_label" for="blue"><span class=" blue"></span></label>
            
            <input type="radio" name="color" id="violet" />
            <label class=" color_label" for="violet"><span class="violet"></span></label>
            
            <input type="radio" name="color" id="purple" />
            <label class=" color_label" for="purple"><span class="purple"></span></label>
            
            <input type="radio" name="color" id="pink" />
            <label class="color_label" for="pink"><span class="pink"></span></label>
            
            <input type="color" id="color-picker" name="color-picker" value="#4A98F7" />
            <label class="color_label" for="color-picker"><span class="color-picker"></span></label>
            
                  </div>
            </div>


            <div class="col-12 text-center">
                
            </div>

        </div>

  </div>