      <button class="neumporphism-flat btn  clear-canvas"><i class="material-symbols-outlined">delete</i></button>
      <button class="neumporphism-flat btn mt-1 save-img"><i class="material-symbols-outlined">download</i></button>
    </div>
    <div class="col-8">
      <canvas id="drawingCanvas" class="m-2 neumporphism-inset"></canvas>
    </div>
    
    <div class="col-4">
       <!-------------------------CHAT--------------------------------->
     <%- include('partials/chat'); %>
    </div>
  </div>
</div>
