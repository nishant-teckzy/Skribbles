    <%- include('partials/drawer'); %>

    <!------------------------DRAWER--END-------------------------->

  <div class="container-fluid">
  <div class="row rounded m-2 p-2 justify-content-between neumporphism-flat  text-white">
    <div>
      <button class="neumporphism-inset btn btn-sm navbar-toggler" type="button" onclick="openSideDrawer()">
        <span style="color:#6d5dfc;" class="material-symbols-outlined">menu</span>
      </button>
       
      <span style="color:#9baacf; vertical-align: middle;" class=" text-center  ml-1">
        <span style="vertical-align: middle; color:#6d5dfc;" class="material-symbols-outlined">timer</span>
        <span id="timer">25</span>
      </span>

      <span style="color:#9baacf; vertical-align: middle;" class=" text-center  ml-3">
        <span style="vertical-align: middle; color:#6d5dfc;" class="material-symbols-outlined">poker_chip
